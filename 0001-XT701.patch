+	 */
+	ret = gpio_request(GPIO_SIGNAL_MMC_DET, "mmc_detect");
+	if (ret < 0)
+		goto err;
+	ret = gpio_direction_input(GPIO_SIGNAL_MMC_DET);
+	if (ret < 0)
