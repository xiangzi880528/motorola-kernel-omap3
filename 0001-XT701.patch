+	},
+	{
+		160,
+		"gps_interrupt",
+		GPIODEV_CONFIG_INPUT | GPIODEV_CONFIG_INT_REDG,
+		GPIODEV_CONFIG_INVALID,
+		GPIODEV_FLAG_CONFIGURABLE | GPIODEV_FLAG_LOWLEVELACCESS,
