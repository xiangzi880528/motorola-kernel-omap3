+/*
+ * Set CSI2 Virtual ID.
+ */
+static int ov8810_set_virtual_id(struct i2c_client *client, u32 id)
+{
+	return ov8810_write_reg(client, OV8810_MIPI_CTRL02, (0x3 & id) << 6 |
+									0x12);
+}
