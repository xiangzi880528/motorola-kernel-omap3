+	op.prop_unit_size = sizeof(struct mux_conf_entry);
+	op.callback = mux_pad_callback;
+	op.name_size = 2;
+	dt_prop_or_init(&op);
+
+	/* Read and implement MUX pad setting for pad wakeups registers */
+	op.path = DT_PATH_MUX;
+	op.prop = DT_PROP_MUX_PADWKUPS;
+	op.prop_unit_size = sizeof(struct mux_conf_entry);
+	op.callback = mux_pad_callback;
+	op.name_size = 2;
+	dt_prop_or_init(&op);
